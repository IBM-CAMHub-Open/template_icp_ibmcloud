{
  "terraform_engine": "~> 0.11.0",
  "input_groups": [
    {
      "name": "Globals",
      "label": "Globals"
    },
    {
      "name": "Instances",
      "label": "Instances"
    }
  ],
  "output_groups": [ ],
  "output_datatypes": [
    {
      "name": "com.ibm.cloud.cloudconnections.ICP",
      "dataobject": {
        "name": "${template_output_params.connection_name}",
        "attributes": [
          {
            "name": "username",
            "value": "admin"
          },
          {
            "name": "password",
            "value": "${template_output_params.ibm_cloud_private_admin_password}"
          },
          {
            "name": "ICP_server",
            "value": "${template_output_params.ibm_cloud_private_ca_domain_name}"
          }
        ]
      }
    },
    {
      "name": "private_docker_registry",
      "dataobject": {
        "name": "${template_output_params.registry_config_do_name}",
        "attributes": [
          {
            "name": "server_name",
            "value": "${template_output_params.ibm_cloud_private_ca_domain_name}"
          }, {
            "name": "server_ip",
            "value": "${template_output_params.ibm_cloud_private_master_ip}"
          }, {
            "name": "server_port",
            "value": "8500"
          }, {
            "name": "CA_certificate",
            "value": "${template_output_params.registry_ca_cert}"
          }
        ]
      }     
    }
  ],
  "template_input_params": [
